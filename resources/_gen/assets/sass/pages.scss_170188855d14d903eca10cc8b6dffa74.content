#servicesPage{display:flex;flex-direction:column;min-height:80vh;width:100%}#servicesContainer{display:flex;flex-direction:column;flex-wrap:wrap;justify-content:flex-start;height:auto;margin:auto;width:100%;gap:2rem}#servicesContainer .servicesCard{display:flex;flex-direction:row;height:max-content;min-height:10rem;width:100%;min-width:400px;margin-inline:auto}#servicesContainer .servicesCard .servicesImage{display:flex;width:20%;min-width:300px;object-fit:cover;aspect-ratio:1}#servicesContainer .servicesCard .servicesImage img{width:100%}#servicesContainer .servicesCard .servicesText{display:flex;flex-direction:column;width:max-content;height:auto;width:80%;padding-left:1rem;background-color:var(--muted-color);color:var(--contrast-text);border:1px solid transparent}#servicesContainer .servicesCard .servicesText ul li{color:var(--contrast-text)}@media(min-width:0px) and (max-width:575px){#servicesContainer .servicesCard{flex-direction:column;margin:auto}#servicesContainer .servicesCard .servicesImage{height:4rem;margin:auto;margin-bottom:1rem;min-width:300px;object-fit:cover}#servicesContainer .servicesCard .servicesImage img{width:100%}#servicesContainer .servicesCard .servicesText{width:80%;margin:auto;border-radius:var(--border-radius)}}
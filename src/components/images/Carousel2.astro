---

import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import mountainLake from '../../assets/mountainLake.webp'

const images = import.meta.glob("../../assets/*");

interface Props {
   imgSrc: string;
   altText: string;
}

const { imgSrc, altText } = Astro.props;

if (!images[imgSrc]) throw new Error(`"${imgSrc}" does not exist in glob: "../assets/*"`);

---


<section>
  <div id='carousel'>
    <div id="imagesContainer">
        
      <div class="card">


        <Image src={import(imgSrc)} alt={altText} />
      </div>
    </div>
  </div>
</section>

